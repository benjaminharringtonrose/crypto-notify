{
  "name": "functions",
  "scripts": {
    "lint": "eslint",
    "build": "tsc --skipLibCheck",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npx ts-node src/test.ts",
    "train": "npx ts-node src/scripts/train.ts",
    "backtest": "TF_CPP_MIN_LOG_LEVEL=1 npx ts-node src/scripts/backtest.ts",
    "clear:weights": "npx ts-node src/scripts/clearWeights.ts",
    "train:full": "npm run train && npm run backtest",
    "features:analyze": "npx ts-node src/scripts/analyzeFeatures.ts",
    "features:ablation": "npx ts-node src/scripts/featureAblationStudy.ts",
    "features:optimize": "npx ts-node src/scripts/optimizeFeatureSet.ts",
    "features:gradual": "npx ts-node src/scripts/gradualFeatureOptimization.ts",
    "features:apply": "npx ts-node src/scripts/applyOptimizedFeatures.ts",
    "features:fix-registry": "npx ts-node src/scripts/fixFeatureRegistry.ts",
    "features:all": "npm run features:fix-registry && npm run features:analyze && npm run features:optimize",
    "rl:train": "TF_CPP_MIN_LOG_LEVEL=1 npx ts-node src/scripts/optimizedRLTraining.ts",
    "rl:quick": "TF_CPP_MIN_LOG_LEVEL=1 npx ts-node src/scripts/optimizedRLTraining.ts --episodes=50 --quick",
    "rl:production": "TF_CPP_MIN_LOG_LEVEL=1 npx ts-node src/scripts/optimizedRLTraining.ts --episodes=200",
    "rl:learning": "TF_CPP_MIN_LOG_LEVEL=1 npx ts-node src/scripts/optimizedRLTraining.ts --strategy=learning --episodes=100",
    "rl:aggressive": "TF_CPP_MIN_LOG_LEVEL=1 npx ts-node src/scripts/optimizedRLTraining.ts --strategy=aggressive --episodes=100",
    "rl:conservative": "TF_CPP_MIN_LOG_LEVEL=1 npx ts-node src/scripts/optimizedRLTraining.ts --strategy=conservative --episodes=100",
    "ensemble:test": "npx ts-node src/bitcoin/ensemble/test-ensemble.ts",
    "ensemble:test:all": "npx ts-node src/bitcoin/ensemble/test-ensemble.ts --all",
    "ensemble:test:components": "npx ts-node src/bitcoin/ensemble/test-ensemble.ts --components",
    "ensemble:test:performance": "npx ts-node src/bitcoin/ensemble/test-ensemble.ts --performance",
    "ensemble:example": "npx ts-node src/bitcoin/ensemble/example.ts",
    "ensemble:example:basic": "npx ts-node src/bitcoin/ensemble/example.ts --basic",
    "ensemble:example:advanced": "npx ts-node src/bitcoin/ensemble/example.ts --advanced",
    "ensemble:example:realtime": "npx ts-node src/bitcoin/ensemble/example.ts --realtime",
    "ensemble:example:all": "npx ts-node src/bitcoin/ensemble/example.ts --all",
    "ensemble:train": "npx ts-node src/bitcoin/ensemble/train.ts",
    "ensemble:train:quick": "npx ts-node src/bitcoin/ensemble/train.ts --quick",
    "ensemble:train:full": "npx ts-node src/bitcoin/ensemble/train.ts --full",
    "ensemble:train:production": "npx ts-node src/bitcoin/ensemble/train.ts --production",
    "ensemble:train:validate": "npx ts-node src/bitcoin/ensemble/train.ts --validate"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^7.15.2",
    "@tensorflow/tfjs-node": "^4.22.0",
    "axios": "^1.8.3",
    "coinbase-api": "^1.0.12",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "sentiment": "^5.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@types/sentiment": "^5.0.4",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3"
  },
  "private": true
}
